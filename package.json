{
  "name": "root",
  "private": true,
  "packageManager": "pnpm@9.9.0",
  "license": "MIT",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "start": "pnpm --filter website dev",
    "dev": "pnpm storybook",
    "build": "pnpm -r --if-present run build",
    "build:docs": "pnpm build:storybook",
    "build:react": "pnpm --filter=@sensoro-design/react run build",
    "build:charts": "pnpm --filter=@sensoro-design/charts run build",
    "build:plots": "pnpm --filter=@sensoro-design/plots run build",
    "release": "walrus release",
    "release:build": "lerna run --concurrency 8 --no-private build",
    "release:version": "lerna version --conventional-commits --no-push --yes --no-private",
    "release:publish": "pnpm publish --recursive --tag latest",
    "storybook": "pnpm --filter storybook start",
    "build:storybook": "pnpm --filter storybook build",
    "start:storybook": "pnpm --filter storybook start",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "prepare": "husky || true",
    "clean": "pnpm --filter \"./@sensoro-design/**\" run clean",
    "preinstall": "npx only-allow pnpm",
    "major": "taze minor -wIr"
  },
  "dependencies": {
    "@ant-design/plots": "^2.2.8",
    "@antv/g2": "^5.2.3",
    "@antv/util": "^3.3.8",
    "@visactor/vchart": "1.12.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@antfu/ni": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@eslint-react/eslint-plugin": "catalog:",
    "@sensoro-design/tools": "workspace:*",
    "@testing-library/cypress": "^10.0.2",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/signale": "^1.4.7",
    "@vitest/ui": "^2.0.5",
    "chalk": "catalog:",
    "cross-env": "catalog:",
    "cross-spawn": "catalog:",
    "cypress": "^13.13.3",
    "cypress-real-events": "^1.13.0",
    "cypress-vite": "^1.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-cypress": "^3.3.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-storybook": "^0.8.0",
    "execa": "catalog:",
    "fast-glob": "catalog:",
    "fs-extra": "catalog:",
    "husky": "catalog:",
    "jsdom": "catalog:",
    "lerna": "catalog:",
    "less": "catalog:",
    "lint-staged": "catalog:",
    "ora": "^8.0.1",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "signale": "^1.4.0",
    "simple-git": "catalog:",
    "stylelint": "^16.8.1",
    "stylelint-config-property-sort-order-smacss": "^10.0.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.2",
    "taze": "catalog:",
    "tsx": "catalog:",
    "type-fest": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:",
    "vite-plugin-style-import": "catalog:",
    "vitest": "catalog:",
    "walrus": "workspace:*",
    "zx": "catalog:"
  },
  "pnpm": {
    "patchedDependencies": {
      "@antv/component@2.0.1": "patches/@antv__component@2.0.1.patch"
    }
  },
  "resolutions": {
    "@ant-design/plots": "$@ant-design/plots",
    "@antv/g2": "$@antv/g2",
    "@antv/util": "$@antv/util"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache --fix"
    ]
  }
}
