{
  "name": "@sensoro-design/monorepo",
  "version": "2.0.0",
  "private": true,
  "packageManager": "pnpm@9.4.0",
  "license": "MIT",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "bootstrap": "pnpm install",
    "dev": "pnpm sb",
    "start": "pnpm --filter=website run start",
    "build:docs": "pnpm build:sb",
    "build:react": "pnpm --filter=@sensoro-design/react run build",
    "example:vite": "pnpm --filter=@example/vite run start",
    "release": "walrus release",
    "release:alpha:patch": "walrus release patch --stage alpha --tag next",
    "release:alpha:minor": "walrus release minor --stage alpha --tag next",
    "release:alpha:major": "walrus release major --stage alpha --tag next",
    "release:patch": "npm run release patch",
    "release:minor": "npm run release minor",
    "release:major": "npm run release major",
    "sb": "pnpm --filter @sensoro-design/storybook start",
    "build:sb": "pnpm --filter @sensoro-design/storybook build",
    "start:sb": "pnpm --filter @sensoro-design/storybook start",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "prepare": "husky || true",
    "clean:node-modules": "rm -rf node_modules && rm -rf packages/*/node_modules",
    "clean:lock": "rm -rf pnpm-lock.yaml && rm -rf package.lock.json",
    "clean:dist": "rm -rf packages/*/es && rm -rf packages/*/lib",
    "clean:all": "pnpm clean:lock && pnpm clean:node-modules && pnpm clean:dist",
    "reinstall": "pnpm clean:all && npm run bootstrap",
    "preinstall": "npx only-allow pnpm",
    "major": "taze minor -wIr"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.21.2",
    "@antfu/ni": "^0.21.12",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint-react/eslint-plugin": "^1.5.15",
    "@lotus-design/react-primitives": "alpha",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.7",
    "@testing-library/cypress": "^10.0.2",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/fs-extra": "^11.0.4",
    "@types/gulp": "^4.0.17",
    "@types/gulp-clean-css": "^4.3.4",
    "@types/gulp-postcss": "^8.0.6",
    "@types/gulp-rename": "^2.0.6",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/signale": "^1.4.7",
    "@types/yargs": "^17.0.32",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "chalk": "^5.3.0",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "cypress": "^13.13.0",
    "cypress-real-events": "^1.13.0",
    "cypress-vite": "^1.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-cypress": "^3.3.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-storybook": "^0.8.0",
    "execa": "^9.3.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "gulp": "^5.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-less": "^5.0.0",
    "gulp-postcss": "^10.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-typescript": "6.0.0-alpha.1",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lerna": "^8.1.5",
    "less": "^4.2.0",
    "lint-staged": "^15.2.7",
    "new-github-release-url": "^2.0.0",
    "ora": "^8.0.1",
    "pnpm": "^9.4.0",
    "postcss": "^8.4.38",
    "postcss-html": "^1.7.0",
    "postcss-less": "^6.0.0",
    "postcss-pxtorem": "^6.1.0",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-preserve-directives": "^0.4.0",
    "signale": "^1.4.0",
    "simple-git": "^3.25.0",
    "stylelint": "^16.6.1",
    "stylelint-config-property-sort-order-smacss": "^10.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.0",
    "taze": "^0.14.0",
    "tsx": "^4.16.0",
    "typescript": "^5.4.5",
    "version-next": "^1.0.2",
    "vite": "^5.3.2",
    "vite-plugin-style-import": "^2.0.0",
    "vitest": "^1.6.0",
    "walrus": "workspace:*",
    "yargs": "^17.7.2",
    "zx": "^8.1.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache --fix"
    ]
  }
}
