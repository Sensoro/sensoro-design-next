{
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@sensoro-design/*": ["./packages/@sensoro-design/*/src"]

    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./scripts",
    "packages"
  ],
  "exclude": [
    "node_modules",
    "./scripts/bin/cli.mjs",
    "./packages/storybook/storybook-static",
    "./packages/storybook/postcss.config.cjs",
    "./packages/@sensoro-design/*/dist/**/*",
    "./packages/@sensoro-design/*/es/**/*",
    "./packages/@sensoro-design/*/lib/**/*"
  ]
}
