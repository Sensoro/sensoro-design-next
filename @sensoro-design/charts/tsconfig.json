{
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "rootDir": "src",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src", "reset.d.ts"],
  "exclude": ["./lib", "./es"]
}
